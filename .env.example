# .env.example

# ==================================
# kimP Application Settings
# ==================================
DB_HOST=localhost
DB_USERNAME=user
DB_PASSWORD=password
DB_DATABASE=kimp
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID
INITIAL_CAPITAL_KRW=1500000

# ==================================
# Exchange API Keys
# ==================================
UPBIT_ACCESS_KEY=YOUR_UPBIT_ACCESS_KEY
UPBIT_SECRET_KEY=YOUR_UPBIT_SECRET_KEY
BINANCE_API_KEY=YOUR_BINANCE_API_KEY
BINANCE_SECRET_KEY=YOUR_BINANCE_SECRET_KEY

# ==================================
# [추가] Trading & Test-Mode Settings
# ==================================
# 거래소 운영 모드 (REAL 또는 SIMULATION)
UPBIT_MODE=REAL
BINANCE_MODE=REAL

# 투자 전략 (FULL_CAPITAL 또는 PERCENTAGE)
INVESTMENT_STRATEGY=PERCENTAGE

# PERCENTAGE 전략 시 투자 비율 (예: 10% -> 10)
INVESTMENT_PERCENTAGE=20

# 프리테스트 모드 최대 사이클 횟수 (0 또는 미설정 시 무한 실행)
PRETEST_MAX_CYCLES=5

# 알림 정책 (VERBOSE: 단계별 상세 알림 / SUMMARY: 최종 요약 알림)
NOTIFICATION_MODE=VERBOSE

# 로그 레벨 (DEBUG, VERBOSE, LOG, WARN, ERROR)
LOG_LEVEL=DEBUG